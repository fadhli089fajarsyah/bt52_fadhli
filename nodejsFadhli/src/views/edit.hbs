        </div>
    </nav>


    <div class="container_add_my_project">

        <div class="container mt-5">
            <div class="form-group d-flex flex-column justify-content-center align-items-center">
                <h1>edit MY PROJECT </h1>
                <form action="/penangananEdit/{{index}}" class="form_add" method="post">
                    <!-- Project Name -->
                    <div class="form-group">
                        <label for="project_name">projectname</label>
                        <input class="form-control" type="text" id="project_name" name="project_name"
                            placeholder="project_name" value="{{dataEdit.projectname}}">
                    </div>

                    <!-- Start and End Date -->
                    <div class="row">
                        <div class="col-md-6">
                            <label for="star_date">Start Date</label>
                            <input class="form-control" type="date" id="star_date" name="star_date"
                                value="{{dataEdit.star_date}}">
                        </div>
                        <div class="col-md-6">
                            <label for="end_date">End Date</label>
                            <input class="form-control" type="date" id="end_date" name="end_date"
                                value="{{dataEdit.end_date}}">
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-group mt-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" name="description" id="descriptions" rows="5"
                            placeholder="Enter project description">{{dataEdit.description}}</textarea>
                    </div>

                    <!-- Technologies -->
                    <div class="form-group">
                        <label for="technologies">Technologies</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="logoNode" name="checkedTechnologies"
                                value="logoNode.png" >
                            <label class="form-check-label" for="logoNode">Node.js</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="laravel" name="checkedTechnologies"
                                value="laravel.png">
                            <label class="form-check-label" for="laravel">Laravel</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="react_js" name="checkedTechnologies"
                                value="react.png">
                            <label class="form-check-label" for="react_js">React.js</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="java" name="checkedTechnologies"
                                value="java.png">
                            <label class="form-check-label" for="java">Java</label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mt-4 d-flex justify-content-end align-items-end">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </form>
            </div>
        </div>


    </div>
    <script>
        const selectedTechs = '{{dataEdit.logos}}';
        const node_js = document.getElementById("logoNode");
        const laravel = document.getElementById("laravel");
        const react = document.getElementById("react_js");
        const java = document.getElementById("java");

        node_js.checked = selectedTechs.includes("logoNode.png");
        laravel.checked = selectedTechs.includes("laravel.png");
        react.checked = selectedTechs.includes("react.png");
        java.checked = selectedTechs.includes("java.png");
    </script>

    <script src="/assets/js/add_my_project.js"></script>

